{
  "": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
  "collections": [
    {
      "name": "src",
      "path": "src"
    },
    {
      "name": "ext",
      "path": "ext"
    }
  ],
  "enable_document_symbols": true,
  "enable_semantic_tokens": true,
  "enable_format": false,
  "enable_hover": true,
  "enable_snippets": true,
  "verbose": true,
  "checker_args": "-vet-shadowing -vet-unused-variables",
  "profile": "main",
  "profiles":
  [
    {"name": "main", "checker_path": ["src", "src/draw", "src/platform"]}
  ]
}