{
  "": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
  "collections": [
    {
      "name": "ext",
      "path": "ext"
    }
  ],
  "enable_document_symbols": true,
  "enable_semantic_tokens": true,
  "enable_format": false,
  "enable_hover": true,
  "enable_rename": true,
  "enable_snippets": true,
  "enable_reference": true,
  "enable_fake_methods": true,
  "enable_checker_only_saved": true,
  "verbose": true,
  "checker_args": "-vet-style -vet-cast",
  "profile": "main",
  "profiles":
  [
    {
      "name": "main", 
      "checker_path": ["game", "game/render", "game/platform"]
    }
  ]
}
